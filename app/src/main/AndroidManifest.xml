<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MDP"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".assignment2.Assignment2Activity" />
        <activity android:name=".assignment3.Assignment3Activity" />
        <activity android:name=".assignment3.SignInActivity" />
        <activity android:name=".assignment3.RegisterActivity" />
        <activity android:name=".assignment3.ShoppingActivity" />
        <activity android:name=".assignment3.CalculatorActivity" />
        <activity android:name=".assignment4.SignInActivity" />
        <activity android:name=".assignment4.ShoppingActivity" />
        <activity android:name=".assignment4.RegisterActivity" />
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
    </queries>

</manifest>